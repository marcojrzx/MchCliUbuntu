{% extends 'base.html.twig' %}

{% block body %}
    <h1>Servicio list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Descripcion</th>
                <th>Costo</th>
                <th>Costotiempo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for servicio in servicios %}
            <tr>
                <td><a href="{{ path('adminxs_servicio_show', { 'id': servicio.id }) }}">{{ servicio.id }}</a></td>
                <td>{{ servicio.tipo }}</td>
                <td>{{ servicio.descripcion }}</td>
                <td>{{ servicio.costo }}</td>
                <td>{{ servicio.costoTiempo }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('adminxs_servicio_show', { 'id': servicio.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('adminxs_servicio_edit', { 'id': servicio.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminxs_servicio_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
