
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Bienvenido{% endblock %}</title>
    {% block stylesheets %}<link rel="stylesheet" href="/assets/vendor/bootstrap/dist/css/bootstrap.min.css">
    
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

</head>
{% block body %}

<div id="wrapper">
    <div id="container">
        <div id="welcome" class="col-md-12 well well-lg">
            <h3 class="col-md-4">HOLA CLIENTE</h3>    <a href="/logout"><button type="button" class="btn btn-primary col-md-offset-6">Logout</button></a>
            <h1 class="col-md-12">{{ usuario.nombre }}</h1>
         </div>

 </div>

 <div class="col-md-12 well well-sm">
 <h2 class="col-md-2 col-md-offset-5">Servicios</h2>
 </div>

 </div>




<table class="table table-striped">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Descripcion</th>
            <th>Costo</th>
            <th>Renovacion</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
    {% for servicio in servicios %}
        <tr>
            <td>{{ servicio.tipo }}</td>
            <td>{{ servicio.descripcion }}</td>
            <td>$ {{ servicio.costo }}</td>
            <td>{{ servicio.costoTiempo }}</td>
            <td> <a href="{{ path('cliente_servicio_show', { 'id': servicio.id }) }}" class="btn btn-info btn-lg">
          <span class="glyphicon glyphicon-search"></span> Info
        </a></td>

        </tr>
    {% endfor %}
    </tbody>
</table>


{% endblock %}
{% block javascripts %}
<script src="{{ asset('/assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('/assets/vendor/jquery/dist/jquery.min.js') }}"></script>
{% endblock %}
